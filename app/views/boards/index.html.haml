%p#notice= notice
%h1 Boards
= page_entries_info @boards
%table
  %thead
    %tr
      %th Name
      %th LINK
      %th{:colspan => "3"}
  %tbody
    - @boards.each do |board|
      %tr
        %td= board.name
        %td
          = link_to 'open', board_path(board)
%br
= form_with scope: :board, url: boards_path, local: true do |f|
  - if  @board.errors.any?
    #error_explanation
      .alert.alert-primary
        = pluralize(@board.errors.count, 'error')
        prohibited
        this board from being saved:
        - @board.errors.full_messages.each do |msg| 
          = msg
          
  = f.label :name
  = f.text_field :name, autofocus: true
  = f.submit class: "btn btn-primary"
= paginate @boards
