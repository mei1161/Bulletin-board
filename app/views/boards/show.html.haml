= link_to t('.back'), boards_path
%h2 
  = @board.name
= page_entries_info @responses
- @responses.each do |res|
  .response__container{id: "res_#{res.reply_id}"}
    = res.reply_id
    .response__name
      = res.name 
    .response__date
      = l(res.created_at, format: :response)
    .response__user_id
      id:
      = res.user_id
    .response__image
      = image_tag res.image.url if res.image?
    .response__content
      = simple_format(rewrite_response(res.content))

= paginate @responses

- if  @response.errors.any?
  #error_explanation
    .alert.alert-primary
      = pluralize(@response.errors.count, 'error')
      prohibited
      this board from being saved:
      - @response.errors.full_messages.each do |msg| 
        = msg
= form_with scope: :response, url: responses_path, local: true do |f|
  %p
    = f.label :name
    %br
    = f.text_field :name
    %br
    = f.label :content
    %br
    = f.text_area :content
    %br
    = f.label :image
    %br
    = f.file_field :image
    %br
    = f.hidden_field :board_id , value: @board.id
    %br
      = f.submit class: 'btn btn-primary btn-sm'
