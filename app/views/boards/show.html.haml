%h2 
  = @board.name
  - @board.responses.each do |res|
    %p
      = res.name
      = res.content

= form_with scope: :response, url: responses_path, local: true do |f|
  = f.label :name
  = f.text_field :name, autofocus: true
  = f.label :content
  = f.text_area :content
  = f.hidden_field :board_id , value: @board.id

  = f.submit class: 'btn btn-primary'
